<div class="jumbotron-fluid">
    <div class="row justify-content-center">
        <h5>Материал: &nbsp; </h5>
        @for (int i = 1; i <= 5; i++)
        {
            if (@i <= @Model.MaterialRating)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }
    </div>
    <div class="row justify-content-center">
        <h5>Изпълнение: &nbsp; </h5>
        @for (int i = 1; i <= 5; i++)
        {
            if (@i <= @Model.PerformanceRating)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }

    </div>
    <div class="row justify-content-center">
        <h5>Време: &nbsp; </h5>
        @for (int i = 1; i <= 5; i++)
        {
            if (@i <= @Model.TimeRating)
            {
                <span class="fa fa-star checked"></span>
            }
            else
            {
                <span class="fa fa-star"></span>
            }
        }

    </div>
</div>