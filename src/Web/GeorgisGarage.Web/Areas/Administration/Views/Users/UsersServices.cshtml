@model GeorgisGarage.Web.Areas.Administration.Models.Users.UsersServicesViewModelWrapper
<div class="justify-content-center row h3 text-light">Услуги на @Model.User.UserName</div>
<hr />
<div class="row col-12">
    <div class="container-fluid">
        <table class="table table-dark table-borderless table-hover rounded">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-3 d-flex justify-content-center">Id</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Име</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Начално време</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Час на приключване</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Времетраене</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Рейтинг</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Още</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in @Model.UsersServicesViewModels)
                {
                    <tr class="row">
                        <td class="col-3 d-flex justify-content-center">@service.Id</td>
                        <td class="col-2 d-flex justify-content-center">@service.ServiceName</td>
                        <td class="col-1 d-flex justify-content-center">@service.StartedTime</td>
                        <td class="col-1 d-flex justify-content-center">@service.EndTime</td>
                        <td class="col-1 d-flex justify-content-center">@service.ServiceTime</td>
                        <td class="col-1 d-flex justify-content-center">@service.AverageRating</td>
                        <td class="col-2 d-flex justify-content-center">
                            <div class="btn-group" role="group" aria-label="Admin-func">
                                <a class="btn btn-outline-danger" asp-area="Roads" asp-controller="Home" asp-action="Road" asp-route-id="@service.Id">Детайли</a>
                                <a class="btn btn-outline-danger" asp-area="Roads" asp-controller="Home" asp-action="DeleteRoad" asp-route-id="@service.Id">Изтрий</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>