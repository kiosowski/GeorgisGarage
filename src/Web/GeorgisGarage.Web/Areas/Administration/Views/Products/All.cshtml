@using GeorigsGarage.Data.Models.Enums
@model ICollection<GeorgisGarage.Web.Areas.Administration.Models.Products.ProductViewModel>
<div class="justify-content-center row h3 text-light">Всички продукти</div>
<hr />
<div class="row col-12">
    <div class="container-fluid">
        <table class="table table-dark table-borderless table-hover rounded">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-4 d-flex justify-content-center">Id</th>
                    <th scope="col" class="col-3 d-flex justify-content-center">Име</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Цена</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Скрито</th>
                    <th scope="col" class="col-3 d-flex justify-content-center">Още</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in @Model)
                {
                    <tr class="row">
                        <td class="col-4 d-flex justify-content-center">@product.Id</td>
                        <td class="col-3 d-flex justify-content-center">@product.Name</td>
                        <td class="col-1 d-flex justify-content-center">@product.Price</td>
                        <td class="col-1 d-flex justify-content-center">@product.IsHidden</td>
                        <td class="col-3 d-flex justify-content-center">
                            <div class="btn-group" role="group" aria-label="Admin-func">
                                <a class="btn btn-outline-danger" asp-area="Shop" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Детайли</a>
                                <a class="btn btn-outline-danger" asp-area="Administration" asp-controller="Products" asp-action="EditProduct" asp-route-id="@product.Id">Редактирай</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>